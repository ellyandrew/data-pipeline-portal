<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Uthabiti Africa | Institutions</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Top script start -->
    <%- include('../partials/top_script'); %>
        <!-- / Top script end -->
</head>

<body>
    <!-- Side bar -->
    <%- include('../partials/portal_sidebar'); %>
        <!-- / Side bar -->

        <!-- Start Welcome area -->
        <div class="all-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="logo-pro">
                            <a href="/portal/dashboard"><img class="main-logo" src="/img/logo/logo.png" height="30px"
                                    width="80px" alt="" /></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="header-advance-area">
                <!-- Header top start -->
                <%- include('../partials/header_top'); %>
                    <!-- / Header top end -->
                    <!-- Mobile Menu start -->
                    <%- include('../partials/mobile_menu'); %>
                        <!-- Mobile Menu end -->
            </div>
            <div class="section-admin container-fluid res-mg-t-15" style="margin-top: 60px;">
                <div class="row admin">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="sparkline10-list mt-b-30">
                                    <div class="sparkline10-hd">
                                        <div class="main-sparkline10-hd">
                                            <h1>Facilities</h1>
                                        </div>
                                        <form method="GET" id="filterForm">
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <div class="text-center p-xs font-normal">
                                                        <div class="input-group">
                                                            <input type="text" class="form-control input-sm" name="search" placeholder="Search facility, member no..." value="<%= search || '' %>"> 
                                                            <span class="input-group-btn"> 
                                                                <button type="button" class="btn btn-sm btn-default" onclick="this.form.submit()">Search</button> 
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-1 ">
                                                    <a href="javascript:;">
                                                        <b><span class="pull-left"><%= parseFloat(total).toLocaleString(undefined, {minimumFractionDigits:0, maximumFractionDigits:0}); %> Facilities</span></b>
                                                    </a>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <select class="form-control required input-sm" name="limit" onchange="this.form.submit()">
                                                            <option value="">Show: 50</option>
                                                            <% perPageOptions.forEach(opt => { %>
                                                                <option value="<%= opt %>" <%= perPage === opt ? "selected" : "" %>><%= opt %></option>
                                                            <% }); %>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <select class="form-control required input-sm" name="county" onchange="this.form.submit()">
                                                            <option value="">- county -</option>
                                                            <% counties.forEach(c => { %>
                                                                <option value="<%= c %>" <%= county === c ? "selected" : "" %>><%= c %></option>
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <select class="form-control required input-sm" name="subcounty" onchange="this.form.submit()">
                                                            <option value="">- sub-county -</option>
                                                            <% subcounties.forEach(s => { %>
                                                                <option value="<%= s %>" <%= subcounty === s ? "selected" : "" %>><%= s %></option>
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <select class="form-control required input-sm" name="ward" onchange="this.form.submit()">
                                                            <option value="">- ward -</option>
                                                            <% wards.forEach(w => { %>
                                                                <option value="<%= w %>" <%= ward === w ? "selected" : "" %>><%= w %></option>
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <select class="form-control required input-sm" name="status" onchange="this.form.submit()">
                                                            <option value="">- status -</option>
                                                            <% statusOptions.forEach(st => { %>
                                                                <option value="<%= st %>" <%= status === st ? "selected" : "" %>><%= st %></option>
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <select class="form-control required input-sm" name="type" onchange="this.form.submit()">
                                                            <option value="">- type -</option>
                                                            <% typeOptions.forEach(tp => { %>
                                                                <option value="<%= tp %>" <%= type === tp ? "selected" : "" %>><%= tp %></option>
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        <select class="form-control required" name="sortBy" onchange="this.form.submit()">
                                                            <option value="">Sort By:</option>
                                                            <option value="reg_date" <%= sortBy==='reg_date' ? 'selected' : '' %>>Sort by Reg Date</option>
                                                            <option value="beneficiaries_high" <%= sortBy==='beneficiaries_high' ? 'selected' : '' %>>Sort by More Beneficiaries</option>
                                                            <option value="beneficiaries_low" <%= sortBy==='beneficiaries_low' ? 'selected' : '' %>>Sort by Less Beneficiaries</option>
                                                            <option value="caregivers_high" <%= sortBy==='caregivers_high' ? 'selected' : '' %>>Sort by More Caregivers</option>
                                                            <option value="caregivers_low" <%= sortBy==='caregivers_low' ? 'selected' : '' %>>Sort by Less Caregivers</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="btn-group">
                                                        <a href="/portal/facilities" class="btn btn-danger btn-sm"><i class="fa fa-refresh"></i></a>
                                                        <a class="btn btn-default btn-sm" data-toggle="modal" data-target="#exportFacilityModal"><i class="fa fa-cloud-download"></i> Export</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="sparkline10-graph">
                                        <div class="static-table-list">
                                            <div class="table-responsive">
                                                <table class="table table-bordered table-hover table-responsive">
                                                    <thead>
                                                        <tr class="bg-red text-white">
                                                            <th>Membership No.</th>
                                                            <th>Facility Name</th>
                                                            <th>Facility Type</th>
                                                            <th>Location</th>
                                                            <th>Beneficiary T.</th>
                                                            <th>Caregiver T.</th>
                                                            <th>Reg Date</th>
                                                            <th>Status</th>
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                    <% if(institutions.length > 0) { %>
                                                        <% institutions.forEach( f => { %>
                                                            <% 
                                                                let statusClass = 
                                                                f.status === 'Active' ? 'label-success' :
                                                                f.status === 'Pending' ? 'label-warning' :
                                                                f.status === 'Inactive' ? 'label-danger' : '';
                                                            %>
                                                        <tr>
                                                            <td><%= f.owner_membership %></td>
                                                            <td class="text-uppercase"><%- f.facility_name ? f.facility_name : '<p class="text-danger text-lowercase">Incomplete</p>' %></td>
                                                            <td><%= f.facility_type %></td>
                                                            <td><%= f.f_county %> / <%= f.f_subcounty %></td>
                                                            <td><%= parseFloat(f.total_beneficiaries).toLocaleString(undefined, {minimumFractionDigits:0, maximumFractionDigits:0}); %></td>
                                                            <td><%= parseFloat(f.total_caregivers).toLocaleString(undefined, {minimumFractionDigits:0, maximumFractionDigits:0}); %></td>
                                                            <td><%= formatDate(f.reg_date); %></td>
                                                            <td><span class="label <%= statusClass %>"><%= f.status %></span></td>
                                                            <td>
                                                                <div class="button-style-three">
                                                                    <form action="/portal/view-facility-details" method="POST">
                                                                        <input type="hidden" name="member_id" value="<%= f.member_id %>" required>
                                                                        <input type="hidden" name="facility_id" value="<%= f.facility_id %>" required>
                                                                        <button type="submit" class="btn btn-custon-three btn-default btn-xs"><i class="fa fa-ellipsis-h"></i></button>
                                                                    </form>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% }); %>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="10" align="center">No facility found</td>
                                                            </tr>
                                                        <% } %>
                                                    </tbody>
                                                </table>
                                            </div>
                                            
                                            <!-- Pagination -->
                                            <div class="custom-pagination mt-4">
                                                <nav aria-label="Page navigation">
                                                    <ul class="pagination justify-content-center">

                                                    <% if (currentPage > 1) { %>
                                                        <li class="page-item">
                                                        <a class="page-link" 
                                                            href="?page=<%= currentPage - 1 %>&limit=<%= perPage %>&search=<%= search %>&county=<%= county %>&subcounty=<%= subcounty %>&ward=<%= ward %>&status=<%= status %>&type=<%= type %>&sortBy=<%= sortBy %>">
                                                            Previous
                                                        </a>
                                                        </li>
                                                    <% } %>

                                                    <% paginationRange.forEach(p => { %>
                                                        <% if (p === '...') { %>
                                                        <li class="page-item disabled">
                                                            <span class="page-link">...</span>
                                                        </li>
                                                        <% } else { %>
                                                        <li class="page-item <%= p === currentPage ? 'active' : '' %>">
                                                            <a class="page-link" 
                                                            href="?page=<%= p %>&limit=<%= perPage %>&search=<%= search %>&county=<%= county %>&subcounty=<%= subcounty %>&ward=<%= ward %>&status=<%= status %>&type=<%= type %>&sortBy=<%= sortBy %>">
                                                            <%= p %>
                                                            </a>
                                                        </li>
                                                        <% } %>
                                                    <% }); %>

                                                    <% if (currentPage < totalPages) { %>
                                                        <li class="page-item">
                                                        <a class="page-link" 
                                                            href="?page=<%= currentPage + 1 %>&limit=<%= perPage %>&search=<%= search %>&county=<%= county %>&subcounty=<%= subcounty %>&ward=<%= ward %>&status=<%= status %>&type=<%= type %>&sortBy=<%= sortBy %>">
                                                            Next
                                                        </a>
                                                        </li>
                                                    <% } %>
                                                    </ul>
                                                </nav>
                                            </div>
                                            <!-- / Pagination -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

<!-- Export Facility Modal -->
        <div id="exportFacilityModal" class="modal FullColor-popup-AlertModal fade">
            <div class="modal-dialog modal-lg">
                <form method="GET" action="/portal/export-facilities">
                    <div class="modal-content">
                        <div class="modal-header header-color-modal bg-color-4">
                            <h4 class="modal-title">Export Facilities</h4>
                            <div class="modal-close-area modal-close-df">
                                <a class="close" data-dismiss="modal" href="#"><i class="fa fa-close"></i></a>
                            </div>
                        </div>
                        <div class="modal-body">
                            <div class="row mg-b-30">
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label">County</label>
                                        <select class="form-control required" name="county" id="countySelect" required></select>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label">Sub-County *</label>
                                        <select class="form-control required" name="subCounty" id="subCountySelect" required></select>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label">Ward *</label>
                                        <select class="form-control required" name="ward" id="wardSelect" required></select>
                                    </div>
                                </div>
                            </div>
                            <div class="row mg-b-30">
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group">
                                        <label for="status" class="form-label">Status</label>
                                        <select id="status" name="status" class="form-control">
                                            <option value="">All</option>
                                            <option value="Active">Active</option>
                                            <option value="Closed">Closed</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group">
                                        <label for="membershipType" class="form-label">Facility Type</label>
                                        <select id="membershipType" name="facilityType" class="form-control">
                                            <option value="">All</option>
                                            <option value="Daycare">Daycare</option>
                                            <option value="Home-Care">Home-Care</option>
                                            <option value="ECD Playgroup">ECD Playgroup</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group">
                                        <label for="orderBy" class="form-label">Order By</label>
                                        <select id="orderBy" name="orderBy" class="form-control">
                                            <option value="reg_date">Registration Date</option>
                                            <option value="beneficiaries">Beneficiaries</option>
                                            <option value="caregivers">Caregivers</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row mg-b-30">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label for="limit" class="form-label">Limit Members</label>
                                        <input type="number" id="limit" name="limit" class="form-control" placeholder="e.g. 100">
                                    </div>
                                </div>
                            </div>
                            <div class="row mg-b-30">
                                 <div class="col-md-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="btn-group">
                                        <div class="form-group data-custon-pick data-custom-mg" id="data_5">
                                            <div class="input-daterange input-group" id="datepicker">
                                                <input type="date" class="form-control" name="startDate" />
                                                    <span class="input-group-addon">to</span>
                                                <input type="date" class="form-control" name="endDate" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                             <div class="row mg-b-30">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <label for="exportType" class="form-label">Export Format</label>
                                            <select id="exportType" name="exportType" class="form-control">
                                                <option value="excel">Excel (.xlsx)</option>
                                                <option value="csv">CSV (.csv)</option>
                                            </select>
                                        </div>
                                    </div>
                             </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Export</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

<!-- Bottom script start -->
<%- include('../partials/bottom_script'); %>
<!-- / Bottom script end -->

<script src="/jsUtils/add-member.js"></script>
</body>
</html>