<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Uthabiti Africa | Loans</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Top script start -->
    <%- include('../partials/top_script'); %>
        <!-- / Top script end -->
</head>

<body>
    <!-- Side bar -->
    <%- include('../partials/portal_sidebar'); %>
        <!-- / Side bar -->

        <!-- Start Welcome area -->
        <div class="all-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="logo-pro">
                            <a href="/portal/dashboard"><img class="main-logo" src="/img/logo/logo.png" height="30px"
                                    width="80px" alt="" /></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="header-advance-area">
                <!-- Header top start -->
                <%- include('../partials/header_top'); %>
                    <!-- / Header top end -->
                    <!-- Mobile Menu start -->
                    <%- include('../partials/mobile_menu'); %>
                        <!-- Mobile Menu end -->
            </div>
            <div class="section-admin container-fluid res-mg-t-15" style="margin-top: 60px;">
                <div class="row admin">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="sparkline10-list mt-b-30">
                                    <div class="sparkline10-hd">
                                        <div class="main-sparkline10-hd">
                                            <h1>Loans</h1>
                                        </div>
                                        <form method="GET" id="filterForm">
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <div class="text-center p-xs font-normal">
                                                        <div class="input-group">
                                                            <input type="text" class="form-control input-sm"
                                                                placeholder="Search loan..."> <span
                                                                class="input-group-btn"> <button type="button"
                                                                    class="btn btn-sm btn-default">Search
                                                                </button> </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-3 ">
                                                    <a href="javascript:;">
                                                        <b><span class="pull-left"><%= parseFloat(total).toLocaleString(undefined, { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %> Loans</span></b>
                                                    </a>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="btn-group">
                                                        <a href="/portal/loans" class="btn btn-default btn-sm"><i class="fa fa-refresh"></i></a>
                                                        <a href="#" class="btn btn-default btn-sm" data-toggle="modal" data-target="#exportLoansModal"><i class="fa fa-cloud-download"></i> Export</a>
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <select class="form-control required input-sm" name="limit" onchange="this.form.submit()">
                                                            <option value="">Show: 10</option>
                                                            <% perPageOptions.forEach(opt => { %>
                                                                <option value="<%= opt %>" <%= perPage === opt ? "selected" : "" %>><%= opt %></option>
                                                            <% }); %>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        <select class="form-control required input-sm" name="loanType" onchange="this.form.submit()">
                                                            <option value="">- loan type -</option>
                                                            <% types.forEach(t => { %>
                                                                <option value="<%= t %>" <%= loanType === t ? "selected" : "" %>><%= t %></option>
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <select class="form-control required input-sm" name="status" onchange="this.form.submit()">
                                                            <option value="">- status -</option>
                                                            <% statusOptions.forEach(st => { %>
                                                                <option value="<%= st %>" <%= loanStatus === st ? "selected" : "" %>><%= st %></option>
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <select id="sortBy" name="sortBy" class="form-control" onchange="this.form.submit()">
                                                        <option value="">-- Sort By --</option>
                                                        <option value="reg_date" <%= sortBy === 'reg_date' ? 'selected' : '' %>>Reg Date</option>
                                                        <option value="due_date" <%= sortBy === 'due_date' ? 'selected' : '' %>>Due Date</option>
                                                        <option value="amount" <%= sortBy === 'amount' ? 'selected' : '' %>>Loan Amount</option>
                                                        <option value="balance" <%= sortBy === 'balance' ? 'selected' : '' %>>Outstanding Balance</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <select id="order" name="order" class="form-control" onchange="this.form.submit()">
                                                        <option value="desc" <%= sortOrder === 'DESC' ? 'selected' : '' %>>Desc</option>
                                                        <option value="asc" <%= sortOrder === 'ASC' ? 'selected' : '' %>>Asc</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="sparkline10-graph">
                                        <div class="static-table-list">
                                            <table class="table table-bordered table-hover table-responsive">
                                                <thead>
                                                    <tr>
                                                        <th><strong>Total Principal:</strong> KES <%= parseFloat(summary.total_principal).toLocaleString(undefined, { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %></th>
                                                        <th><strong>Total Interest:</strong> KES <%= parseFloat(summary.total_interest).toLocaleString(undefined, { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %></th>
                                                        <th><strong>Total Repayment:</strong> KES <%= parseFloat(summary.total_repayment).toLocaleString(undefined, { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %></th>
                                                        <th><strong>Total Balance:</strong> KES <%= parseFloat(summary.total_balance).toLocaleString(undefined, { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %></th>
                                                    </tr>
                                                </thead>
                                            </table>
                                            <table class="table table-bordered table-hover table-responsive">
                                                <thead>
                                                    <tr class="bg-red text-white">
                                                        <th>Membership No.</th>
                                                        <th>Fullname</th>
                                                        <th>Loan Type</th>
                                                        <th>Principal</th>
                                                        <th>Interest</th>
                                                        <th>Payable</th>
                                                        <th>Balance</th>
                                                        <th>Period(Months)</th>
                                                        <th>End Date</th>
                                                        <th>Status</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if(loans.length > 0) { %>
                                                    <% loans.forEach(l => { %>
                                                        <% 
                                                        let statusClass = 
                                                            l.status === 'Active' ? 'label-success' :
                                                            l.status === 'Defaulted' ? 'label-danger' :
                                                            l.status === 'Pending' ? 'label-warning' : 
                                                            l.status === 'Closed' ? 'label-secondary' : '';
                                                        %>
                                                    <tr>
                                                        <td><%= l.membership_no %></td>
                                                        <td class="text-uppercase"><%= l.full_name %></td>
                                                        <td><%= l.loan_type %></td>
                                                        <td><%= parseFloat(l.principal).toLocaleString(undefined, { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %></td>
                                                        <td><%= l.interest_rate %>%</td>
                                                        <td><%= parseFloat(l.total_repayment).toLocaleString(undefined, { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %></td>
                                                        <td><%= parseFloat(l.balance).toLocaleString(undefined, { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %></td>
                                                        <td><%= l.repayment_period %></td>
                                                        <td><%= formatDate(l.due_date) %></td>
                                                        <td><span class="label <%= statusClass %>"><%= l.status %></span></td>
                                                        <td>
                                                            <div class="button-style-three">
                                                                <% if (isAdmin || isDataClerk) { %>
                                                                    <% if(l.isOverdue) { %>
                                                                        <form action="/portal/view-sacco" method="POST">
                                                                            <input type="hidden" name="saccoID" value="<%= l.sacco_member_id %>" required>
                                                                            <button type="submit" class="btn btn-custon-three btn-danger btn-xs">Overdue</button>
                                                                        </form>
                                                                    <% } else { %>
                                                                        <form action="/portal/view-sacco" method="POST">
                                                                            <input type="hidden" name="saccoID" value="<%= l.sacco_member_id %>" required>
                                                                            <button type="submit" class="btn btn-custon-three btn-default btn-xs"><i class="fa fa-ellipsis-h"></i></button>
                                                                        </form>
                                                                    <% } %>
                                                                <% } %>
                                                            </div>
                                                        </td>
                                                        <% }) %>
                                                        <% } else { %>
                                                            <tr><td colspan="12" align="center">No loan found</td></tr>
                                                        <% } %>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        <!-- Pagination -->
                                            <div class="custom-pagination">
                                                <nav aria-label="Page navigation">
                                                    <ul class="pagination justify-content-center">

                                                    <% if (currentPage > 1) { %>
                                                        <li class="page-item">
                                                        <a class="page-link" 
                                                            href="?page=<%= currentPage - 1 %>&limit=<%= perPage %>&search=<%= search %>&loanType=<%= loanType %>&status=<%= loanStatus %>&sortBy=<%= sortBy %>&order=<%= sortOrder %>">
                                                            Previous
                                                        </a>
                                                        </li>
                                                    <% } %>

                                                    <% paginationRange.forEach(p => { %>
                                                        <% if (p === '...') { %>
                                                        <li class="page-item disabled">
                                                            <span class="page-link">...</span>
                                                        </li>
                                                        <% } else { %>
                                                        <li class="page-item <%= p === currentPage ? 'active' : '' %>">
                                                            <a class="page-link" 
                                                            href="?page=<%= p %>&limit=<%= perPage %>&search=<%= search %>&loanType=<%= loanType %>&status=<%= loanStatus %>&sortBy=<%= sortBy %>&order=<%= sortOrder %>">
                                                            <%= p %>
                                                            </a>
                                                        </li>
                                                        <% } %>
                                                    <% }); %>

                                                    <% if (currentPage < totalPages) { %>
                                                        <li class="page-item">
                                                        <a class="page-link" 
                                                            href="?page=<%= currentPage + 1 %>&limit=<%= perPage %>&search=<%= search %>&loanType=<%= loanType %>&status=<%= loanStatus %>&sortBy=<%= sortBy %>&order=<%= sortOrder %>">
                                                            Next
                                                        </a>
                                                        </li>
                                                    <% } %>
                                                    </ul>
                                                </nav>
                                            </div>
                                        <!-- / Pagination -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

<!-- Export loan Modal -->
 <div id="exportLoansModal" class="modal FullColor-popup-AlertModal fade">
  <div class="modal-dialog modal-lg">
    <form method="GET" action="/portal/export-loans">
      <div class="modal-content">
        <div class="modal-header header-color-modal bg-color-4">
          <h4 class="modal-title">Export Loans</h4>
          <div class="modal-close-area modal-close-df">
            <a class="close" data-dismiss="modal" href="#"><i class="fa fa-close"></i></a>
          </div>
        </div>

        <div class="modal-body">

          <!-- Search and Filters -->
          <div class="row mg-b-30">
            <div class="col-lg-6">
              <div class="form-group">
                <label>Loan Type</label>
                <select class="form-control" name="loanType">
                  <option value="">All</option>
                  <% types.forEach(t => { %>
                    <option value="<%= t %>"><%= t %></option>
                  <% }) %>
                </select>
              </div>
            </div>

            <div class="col-lg-6">
              <div class="form-group">
                <label>Loan Status</label>
                <select class="form-control" name="status">
                  <option value="">All</option>
                  <option value="Pending">Pending</option>
                  <option value="Active">Active</option>
                  <option value="Closed">Closed</option>
                  <option value="Defaulted">Defaulted</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Amount Range -->
          <div class="row mg-b-30">
            <div class="col-lg-6">
              <div class="form-group">
                <label>Principal Range</label>
                <div class="input-group">
                  <input type="number" class="form-control" name="minPrincipal" placeholder="Min">
                  <span class="input-group-addon">to</span>
                  <input type="number" class="form-control" name="maxPrincipal" placeholder="Max">
                </div>
              </div>
            </div>

            <div class="col-lg-6">
              <div class="form-group">
                <label>Sort By</label>
                <select name="sortBy" class="form-control">
                  <option value="due_date">Due Date</option>
                  <option value="amount_high">Principal (High → Low)</option>
                  <option value="amount_low">Principal (Low → High)</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Date Range -->
          <div class="row mg-b-30">
            <div class="col-md-12">
              <div class="form-group">
                <label>Issue / Due Date Range</label>
                <div class="input-daterange input-group">
                  <input type="date" class="form-control" name="startDate" />
                  <span class="input-group-addon">to</span>
                  <input type="date" class="form-control" name="endDate" />
                </div>
              </div>
            </div>
          </div>

          <!-- Record Limit and Export Format -->
          <div class="row mg-b-30">
            <div class="col-lg-6">
              <div class="form-group">
                <label>Limit Records</label>
                <input type="number" name="limit" class="form-control" placeholder="e.g. 100">
              </div>
            </div>

            <div class="col-lg-6">
              <div class="form-group">
                <label>Export Format</label>
                <select name="exportType" class="form-control">
                  <option value="excel">Excel (.xlsx)</option>
                  <option value="csv">CSV (.csv)</option>
                </select>
              </div>
            </div>
          </div>

        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-danger">Export</button>
        </div>

      </div>
    </form>
  </div>
</div>

<!-- Bottom script start -->
    <%- include('../partials/bottom_script'); %>
<!-- / Bottom script end -->
</body>

</html>