<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Uthabiti Africa | Members</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Top script start -->
    <%- include('../partials/top_script'); %>
        <!-- / Top script end -->
</head>

<body>
    <!-- Side bar -->
    <%- include('../partials/portal_sidebar'); %>
        <!-- / Side bar -->

        <!-- Start Welcome area -->
        <div class="all-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="logo-pro">
                            <a href="/portal/dashboard"><img class="main-logo" src="/img/logo/logo.png" height="30px"
                                    width="80px" alt="" /></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="header-advance-area">
                <!-- Header top start -->
                <%- include('../partials/header_top'); %>
                    <!-- / Header top end -->
                    <!-- Mobile Menu start -->
                    <%- include('../partials/mobile_menu'); %>
                        <!-- Mobile Menu end -->
            </div>
            <div class="section-admin container-fluid res-mg-t-15" style="margin-top: 60px;">
                <div class="row admin">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="sparkline10-list mt-b-30">
                                    <div class="sparkline10-hd">
                                        <div class="main-sparkline10-hd">
                                            <h1>Members</h1>
                                        </div>
                                        <form method="GET" id="filterForm">
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <div class="text-center p-xs font-normal">
                                                        <div class="input-group">
                                                            <input type="text" name="search" class="form-control input-sm" placeholder="Search fullname, member no, phone..." value="<%= search || '' %>"> 
                                                            <span class="input-group-btn"> 
                                                                <button type="button" class="btn btn-sm btn-danger" onclick="this.form.submit()">Search
                                                                </button> 
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <a href="javascript:;">
                                                        <b><span class="pull-left">
                                                            <%= parseFloat(total).toLocaleString(undefined, { minimumFractionDigits: 0, maximumFractionDigits: 0 }) %> Members
                                                        </span></b>
                                                    </a>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="btn-group">
                                                        <a href="/portal/members" class="btn btn-default btn-sm"><i class="fa fa-refresh"></i></a>
                                                        <a href="/portal/add-member" class="btn btn-default btn-sm"><i class="fa fa-plus"></i> Add</a>
                                                        <a href="#" class="btn btn-default btn-sm" data-toggle="modal" data-target="#exportMembersModal"><i class="fa fa-cloud-download"></i> Export</a>
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <select class="form-control required input-sm" name="limit" onchange="this.form.submit()">
                                                            <option value="">Show: 10</option>
                                                            <% perPageOptions.forEach(opt => { %>
                                                                <option value="<%= opt %>" <%= perPage === opt ? "selected" : "" %>><%= opt %></option>
                                                            <% }); %>
                                                        </select>
                                                    </div>
                                                </div>

                                                <% const countyArray = Array.isArray(county) 
                                                        ? county 
                                                        : county ? [county] : [];
                                                    const multipleCounty = countyArray.length > 1;
                                                %>
                                                <% if (!multipleCounty) { %>
                                                <div class="col-md-1">
                                                <% } else { %>
                                                <div class="col-md-3">
                                                <% } %>
                                                    <% if (!subcounty && !ward) { %>
                                                    <div class="form-group">
                                                        <select data-placeholder="- county -" class="form-control required input-sm chosen-select" name="county" onchange="this.form.submit()" multiple size="5">
                                                            <option value="">- county -</option>
                                                            <% counties.forEach(c => { %>
                                                            <option value="<%= c %>" <%= countyArray.includes(c) ? 'selected' : '' %>><%= c %></option>
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                    <% } else { %>
                                                    <div class="form-group">
                                                        <select class="form-control required input-sm" name="county" onchange="this.form.submit()">
                                                            <option value="">- county -</option>
                                                            <% counties.forEach(c => { %>
                                                            <option value="<%= c %>" <%= countyArray.includes(c) ? 'selected' : '' %>><%= c %></option>
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                    <% } %>
                                                </div>

                                                <% if (!multipleCounty) { %>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <select class="form-control required input-sm" name="subcounty" onchange="this.form.submit()">
                                                            <option value="">- sub-county -</option>
                                                            <% subcounties.forEach(s => { %>
                                                                <option value="<%= s %>" <%= subcounty === s ? "selected" : "" %>><%= s %></option>
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                </div>
                                                 <% } %>
                                                <% if (!multipleCounty) { %>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <select class="form-control required input-sm" name="ward" onchange="this.form.submit()">
                                                            <option value="">- ward -</option>
                                                            <% wards.forEach(w => { %>
                                                                <option value="<%= w %>" <%= ward === w ? "selected" : "" %>><%= w %></option>
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                </div>
                                                 <% } %>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <select class="form-control required input-sm" name="type" onchange="this.form.submit()">
                                                            <option value="">- type -</option>
                                                            <% membershipType.forEach(mt => { %>
                                                                <option value="<%= mt %>" <%= type === mt ? "selected" : "" %>><%= mt %></option>
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <select class="form-control required input-sm" name="ageGroup" onchange="this.form.submit()">
                                                            <option value="">- Age Group -</option>
                                                            <option value="">All</option>
                                                            <option value="18-25" <%= ageGroup === '18-25' ? "selected" : "" %>>18–25</option>
                                                            <option value="26-35" <%= ageGroup === '26-35' ? "selected" : "" %>>26–35</option>
                                                            <option value="36-45" <%= ageGroup === '36-45' ? "selected" : "" %>>36–45</option>
                                                            <option value="46-60" <%= ageGroup === '46-60' ? "selected" : "" %>>46–60</option>
                                                            <option value="60-100" <%= ageGroup === '60-100' ? "selected" : "" %>>60+</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-1">
                                                    <div class="form-group">
                                                        <select class="form-control required input-sm" name="status" onchange="this.form.submit()">
                                                            <option value="">- status -</option>
                                                            <% statusOptions.forEach(st => { %>
                                                                <option value="<%= st %>" <%= status === st ? "selected" : "" %>><%= st %></option>
                                                            <% }) %>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="sparkline13-graph">
                                        <div class="datatable-dashv1-list custom-datatable-overright table-responsive" style="max-height: 100vh; overflow-y: auto;">
                                            <table class="table table-bordered table-hover table-small">
                                                <thead style="position: sticky; top: 0; background: #fff; z-index: 2;">
                                                    <tr class="bg-red text-white">
                                                        <th>Membership No.</th>
                                                        <th>Fullname Name</th>
                                                        <th>Gender</th>
                                                        <th>Phone No</th>
                                                        <th>Location</th>
                                                        <th>Facility</th>
                                                        <th>Reg Date</th>
                                                        <th>Status</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                <% if(members.length > 0) { %>
                                                    <% members.forEach( m => { %>
                                                        <% 
                                                        let statusClass = 
                                                            m.status === 'Active' ? 'label-success' :
                                                            m.status === 'Inactive' ? 'label-info' :
                                                            m.status === 'Suspended' ? 'label-danger' :
                                                            m.status === 'Pending' ? 'label-warning' :
                                                            m.status === 'Draft' ? 'label-default' : '';
                                                        %>
                                                        <tr>
                                                            <td><%= m.membership_no %></td>
                                                            <td class="text-uppercase"><%= m.full_name %></td>
                                                            <td><%= m.gender %></td>
                                                            <td><%= m.phone %></td>
                                                            <td class="text-uppercase"><%= m.county %>/<%= m.sub_county %>-<%= m.ward %></td>
                                                            <td><%= m.membership_type %></td>
                                                            <td><%= formatDate(m.reg_date) %></td>
                                                            <td><span class="label <%= statusClass %>"><%= m.status %></span></td>
                                                            <td>
                                                                <div class="button-style-three">
                                                                    <% if(m.status === 'Draft'){ %>
                                                                        <% if (isAdmin || isDataClerk || isChampion) { %>
                                                                        <form action="/portal/get-draft-member" method="POST">
                                                                            <input type="hidden" name="member_id" value="<%= m.member_id %>" required>
                                                                            <button type="submit" class="btn btn-custon-three btn-default btn-xs"><i class="fa fa-edit"></i></button>
                                                                        </form>
                                                                        <% } %>
                                                                    <% } else { %>
                                                                        <% if (isAdmin || isDataClerk) { %>
                                                                        <form action="/portal/view-member" method="POST">
                                                                            <input type="hidden" name="membershipNumber" value="<%= m.member_id %>" required>
                                                                            <button type="submit" class="btn btn-custon-three btn-default btn-xs"><i class="fa fa-ellipsis-h"></i></button>
                                                                        </form>
                                                                        <% } %>
                                                                    <% } %>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    <% }); %>
                                                <% } else { %>
                                                    <tr><td colspan="9" style="text-align: center;">No member found</td></tr>
                                                <% } %>
                                                </tbody>
                                            </table>
                                            <!-- Pagination -->
                                            <div class="custom-pagination">
                                                <nav aria-label="Page navigation">
                                                    <ul class="pagination justify-content-center">

                                                    <% if (currentPage > 1) { %>
                                                        <li class="page-item">
                                                        <a class="page-link" 
                                                            href="?page=<%= currentPage - 1 %>&limit=<%= perPage %>&search=<%= search %>&county=<%= county %>&subcounty=<%= subcounty %>&ward=<%= ward %>&status=<%= status %>">
                                                            Previous
                                                        </a>
                                                        </li>
                                                    <% } %>

                                                    <% paginationRange.forEach(p => { %>
                                                        <% if (p === '...') { %>
                                                        <li class="page-item disabled">
                                                            <span class="page-link">...</span>
                                                        </li>
                                                        <% } else { %>
                                                        <li class="page-item <%= p === currentPage ? 'active' : '' %>">
                                                            <a class="page-link" 
                                                            href="?page=<%= p %>&limit=<%= perPage %>&search=<%= search %>&county=<%= county %>&subcounty=<%= subcounty %>&ward=<%= ward %>&status=<%= status %>">
                                                            <%= p %>
                                                            </a>
                                                        </li>
                                                        <% } %>
                                                    <% }); %>

                                                    <% if (currentPage < totalPages) { %>
                                                        <li class="page-item">
                                                        <a class="page-link" 
                                                            href="?page=<%= currentPage + 1 %>&limit=<%= perPage %>&search=<%= search %>&county=<%= county %>&subcounty=<%= subcounty %>&ward=<%= ward %>&status=<%= status %>">
                                                            Next
                                                        </a>
                                                        </li>
                                                    <% } %>
                                                    </ul>
                                                </nav>
                                            </div>
                                            <!-- / Pagination -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Export Members Modal -->
        <div id="exportMembersModal" class="modal FullColor-popup-AlertModal fade">
            <div class="modal-dialog modal-lg">
                <form method="GET" action="/portal/export-members">
                    <div class="modal-content">
                        <div class="modal-header header-color-modal bg-color-4">
                            <h4 class="modal-title">Export Members</h4>
                            <div class="modal-close-area modal-close-df">
                                <a class="close" data-dismiss="modal" href="#"><i class="fa fa-close"></i></a>
                            </div>
                        </div>

                        <div class="modal-body">

                            <div class="row mg-b-30">
                                <% if(!subcounty && !ward) { %>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="form-label">Counties</label>
                                            <select class="chosen-select" multiple="" tabindex="-1" name="county[]" readonly>
                                                <% counties.forEach(c=> { %>
                                                    <option value="<%= c %>" <%=countyArray.includes(c) ? 'selected' : '' %>><%=
                                                            c %>
                                                    </option>
                                                    <% }) %>
                                            </select>
                                        </div>
                                    </div>
                                    <% } else { %>
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                            <div class="form-group">
                                                <label class="form-label">County</label>
                                                <select class="form-control required" name="county[]" id="exportCounty">
                                                    <option value="<%= county || '' %>">
                                                        <%= county || '' %>
                                                    </option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                            <div class="form-group">
                                                <label class="form-label">Sub-County *</label>
                                                <select class="form-control required" name="subCounty" id="exportSubcounty">
                                                    <option value="<%= subcounty || '' %>">
                                                        <%= subcounty || 'All' %>
                                                    </option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                            <div class="form-group">
                                                <label class="form-label">Ward *</label>
                                                <select class="form-control required" name="ward" id="exportWard">
                                                    <option value="<%= ward || '' %>">
                                                        <%= ward || 'All' %>
                                                    </option>
                                                </select>
                                            </div>
                                        </div>
                                        <% } %>
                            </div>

                            <div class="row mg-b-30">

                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group">
                                        <label for="status" class="form-label">Member Status</label>
                                        <select id="status" name="status" class="form-control">
                                            <option value="<%= status || '' %>">
                                                <%= status || 'All' %>
                                            </option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group">
                                        <label for="membershipType" class="form-label">Membership Type</label>
                                        <select id="membershipType" name="membershipType" class="form-control">
                                            <option value="">All</option>
                                            <option value="Facility In" <%=membershipType==='Facility In' ? "selected" : "" %>
                                                >Facility Owner to Join Uthabiti Africa</option>
                                            <option value="Individual" <%=membershipType==='Individual' ? "selected" : "" %>
                                                >Individual Joining Uthabiti Africa Network</option>
                                            <option value="Sacco In" <%=membershipType==='Sacco In' ? "selected" : "" %>>Joining
                                                Uthabiti SACCO</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group">
                                        <label for="ageGroup" class="form-label">Age Group</label>
                                        <select id="ageGroup" name="ageGroup" class="form-control">
                                            <option value="">All</option>
                                            <option value="18-25" <%=ageGroup==='18-25' ? "selected" : "" %>>18–25</option>
                                            <option value="26-35" <%=ageGroup==='26-35' ? "selected" : "" %>>26–35</option>
                                            <option value="36-45" <%=ageGroup==='36-45' ? "selected" : "" %>>36–45</option>
                                            <option value="46-60" <%=ageGroup==='46-60' ? "selected" : "" %>>46–60</option>
                                            <option value="60-100" <%=ageGroup==='60-100' ? "selected" : "" %>>60+</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="row mg-b-30">
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="form-group">
                                        <label for="limit" class="form-label">Total Number</label>
                                        <input type="number" id="limit" name="limit" class="form-control" placeholder="e.g. 100"
                                            value="<%= total || '' %>">
                                    </div>
                                </div>
                                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                                    <div class="form-group">
                                        <label class="form-label">Registration Date Range</label>
                                        <div class="input-daterange input-group">
                                            <input type="date" class="form-control" name="startDate" />
                                            <span class="input-group-addon">to</span>
                                            <input type="date" class="form-control" name="endDate" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mg-b-30">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="exportType" class="form-label">Export Format</label>
                                        <select id="exportType" name="exportType" class="form-control">
                                            <option value="excel">Excel (.xlsx)</option>
                                            <option value="csv">CSV (.csv)</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Export</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>


<!-- Bottom script start -->
<%- include('../partials/bottom_script'); %>
<!-- / Bottom script end -->
</body>
</html>