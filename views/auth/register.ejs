<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Uthabiti Africa | Register</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Top script start -->
    <%- include('../partials/top_script'); %>
    <!-- / Top script end -->
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="back-link back-backend">
                    <a href="https://www.uthabitiafrica.org/" class="btn btn-primary">Close Portal</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12"></div>
            <div class="col-md-6 col-md-6 col-sm-6 col-xs-12">
                <div class="text-center custom-login">
                    <h3>Registration</h3>
                    <p>Join Uthabiti Africa</p>
                </div>
                <div class="hpanel">
                    <div class="panel-body">
                        <form action="/auth/register-user" method="POST">
                            <div class="row">
                                <div class="form-group col-lg-4">
                                    <label>First Name</label>
                                    <input type="text" name="firstName" class="form-control" placeholder="First Name" required>
                                </div>
                                <div class="form-group col-lg-4">
                                    <label>Middle Name</label>
                                    <input type="text" name="middleName" class="form-control" placeholder="Middle Name(Optional)">
                                </div>
                                <div class="form-group col-lg-4">
                                    <label>Last Name</label>
                                    <input type="text" name="lastName" class="form-control" placeholder="Last Name" required>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label>ID/Passport Number</label>
                                    <input type="number" name="idNumber" class="form-control" placeholder="Your ID/Passport Number" required>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label>Membership Type</label>
                                    <select name="membershipType" class="form-control" required>
                                      <option value="">- select type -</option>
                                      <option value="Facility In">Facility Owner to Join Uthabity Africa</option>
                                      <option value="Individual">Individual Joining Uthabiti Africa Network</option>
                                      <option value="Sacco In">Joining uthabiti SACCO</option>
                                    </select>
                                </div>
                                <div class="form-group col-lg-12">
                                    <label>Email Address</label>
                                    <input type="email" name="email" class="form-control" placeholder="Your email address" required>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label>Password</label>
                                    <input type="password" name="password" id="Password" class="form-control" placeholder="Your password" required>
                                    <span class="help-block small text-danger mg-t-30" id="passwordFeedback"></span>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label>Confirm Password</label>
                                    <input type="password" name="password2" id="confirmPassword" class="form-control" placeholder="Confirm your password" required>
                                    <span class="help-block small text-danger mg-t-30" id="confirmPasswordFeedback"></span>
                                </div>
                            </div>
                            <div class="col-md-12  text-center">
                                <button class="btn btn-success loginbtn" type="submit" id="submitDetails">Submit Details</button>
                            </div>
                            <div class="col-md-12  text-center">
                                <a href="/" class="btn btn-success loginbtn">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12"></div>
        </div>
        <div class="row mg-t-30">
            <div class="col-md-12 text-center">
                <p>Copyright &copy; Uthabiti Africa <%= new Date().getFullYear() %> All rights reserved.</p>
            </div>
        </div>
    </div>

<!-- Bottom script start -->
  <%- include('../partials/bottom_script'); %>
<!-- / Bottom script end -->
<script src="/jsUtils/reg-member.js"></script>
</body>
</html>
