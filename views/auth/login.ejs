<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Uthabiti Africa | Login</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Top script start -->
    <%- include('../partials/top_script'); %>
    <!-- / Top script end -->
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="back-link back-backend">
                    <a href="https://www.uthabitiafrica.org/" class="btn btn-primary">Close Portal</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row mb-4">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12"></div>
            <div class="col-md-6 col-md-6 col-sm-6 col-xs-12">
                <div class="text-center custom-login">
                    <h3>Welcome to Uthabiti Africa Portal</h3>
                    <p>Connecting Home-care owners, Daycare owners, caregivers, and communities to create safe and
                        thriving spaces for children. </p>
                </div>
                <div class="hpanel">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                        <div class="sparkline8-list mt-b-30">
                            <div class="sparkline8-hd">
                                <div class="main-sparkline8-hd">
                                    <h1>Member Login</h1>
                                </div>
                            </div>
                            <div class="sparkline8-graph">
                                <div class="basic-login-form-ad">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <div class="basic-login-inner">
                                                <p>Registered Member can get  login from here</p>
                                                <form action="/auth/login" method="POST">
                                                    <div class="form-group-inner">
                                                        <label>Email</label>
                                                        <input type="email" class="form-control" name="email" id="userInput" placeholder="Enter Email" required/>
                                                    </div>
                                                    <div class="form-group-inner">
                                                        <label>Password</label>
                                                        <input type="password" class="form-control" name="password" id="password" placeholder="password" required/>
                                                    </div>
                                                    <div class="login-btn-inner">
                                                        <div class="inline-remember-me">
                                                            <button class="btn btn-sm btn-primary pull-right login-submit-cs" type="submit" id="submitButton">Log In</button>
                                                            <button class="btn btn-sm btn-primary pull-right login-submit-cs" type="submit" disabled style="display: none;" id="defaultButton">Loging In ...</button>
                                                             <a href="/auth/forgot-password" target="_blank" class="pull-left">Forgot Password?</a>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                            <div class="basic-login-inner">
                                                <h3>Not a member?</h3>
                                                <p>You can create an account:</p>
                                                <div class="create-account-sign">
                                                    <a href="/"><i class="fa fa-sign-in big-icon"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12"></div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <p>Copyright &copy; 2025 <a href="https://uhrtur.co.ke">Uhrtur Group LTD</a> All rights reserved.</p>
            </div>
        </div>
    </div>

    <!-- Bottom script start -->
    <%- include('../partials/bottom_script'); %>
    <!-- / Bottom script end -->

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const userInput = document.getElementById('userInput');
        const passwordInput = document.getElementById('password');
        const submitButton = document.getElementById('submitButton');
        const defaultButton = document.getElementById('defaultButton');
        const form = document.forms[0]; // Assuming there's one form on the page.

      
        submitButton.addEventListener('click', (e) => {
          e.preventDefault(); // Prevent form submission if invalid.
          const userValue = userInput.value.trim();
          const passwordValue = passwordInput.value.trim();

          if (userValue && passwordValue) {
              // Toggle button visibility.
              submitButton.style.display = 'none';
              defaultButton.style.display = 'block';

              // Optionally validate the form before submission.
              form.submit();
          } else {
              // alert('Please fill in all required fields.');
          }
        });
      });
    </script>
</body>

</html>